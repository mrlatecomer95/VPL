<UserControl x:Class="TUM.CMS.VplControl.NodeControls.ExpressionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TUM.CMS.VplControl.NodeControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Button Content="Add Port" Width="50"/>
            <Button Content=" + "/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Add Operator"/>
            <ComboBox Width="50">
                <ComboBoxItem Content="&gt;" />
                <ComboBoxItem Content="&lt;" />
                <ComboBoxItem Content="&gt;="/>
                <ComboBoxItem Content="&lt;="/>
                <ComboBoxItem Content="=="/>
                <ComboBoxItem Content="!="/>
            </ComboBox>
            <Button Content=" + "/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Expression" Width="60" />
            <TextBox  Width="180"/>
            <Button Content="Verify"></Button>
        </StackPanel>

    </StackPanel>
</UserControl>
