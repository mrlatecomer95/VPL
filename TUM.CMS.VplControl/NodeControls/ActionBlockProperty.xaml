<UserControl x:Class="TUM.CMS.VplControl.NodeControls.ActionBlockProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TUM.CMS.VplControl.NodeControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <ListView Name="ListView"/>
            <Button Width="18" Height="18" Content="↑" Click="btnMoveUp_OnClick"/>
            <Button Width="18" Height="18" Content="↓" Click="btnMoveDown_OnClick"/>
        </StackPanel>
        
    </Grid>
</UserControl>
